{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Kraitif",
            "type": "node-terminal",
            "request": "launch",
            "command": "pwsh -File ${workspaceFolder}/start.ps1 -Quickstart",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Demo Script",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/demo.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["${workspaceFolder}/tests"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}